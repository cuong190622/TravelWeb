@model TravelWeb.Models.UserInfo
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>
    <div class="pt-5">
            <h1 class="text-center"> Booking system </h1>
            <div class="container">
                <div class="row">
                    <div class="col-md-5 mx-auto">
                        <div class="message">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" });
                            }
                        </div>
                        <div class="card card-body">
                            @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", _lpchecked = "1" }))
                            {
                                <div class="form-group required">
                                    @Html.LabelFor(m => m.Email,
                                       htmlAttributes: new { @class = "font-weight-bold" })
                                    @Html.EditorFor(m => m.Email,
                                      new
                                      {
                                          htmlAttributes = new { @class = "form-control text-lowercase" }
                                      })
                                </div>
                                <div class="form-group required">
                                    <label>Password</label> <br />
                                    @Html.PasswordFor(m => m.PasswordHash,
                                      new
                                      {
                                          htmlAttributes = new { @class = "form-control text-lowercase" }
                                      })
                                </div>
                                <div class="form-group pt-1">
                                    <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                </div>
                            }



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

