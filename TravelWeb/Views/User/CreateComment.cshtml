@model TravelWeb.Models.Comment
@{
    ViewBag.Title = "CreateComment";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}

<h2>CreateComment</h2>

<div>


    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }
    <div class="container">


        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.TypeId, htmlAttributes: new { @class = "form-weight-bold" })
                @Html.DropDownListFor(m => m.TypeId, (IEnumerable<SelectListItem>)ViewBag.comment, htmlAttributes
               : new { @class = "form-control" }
               )
            </div>



            <div class="form-group">
                @Html.LabelFor(m => m.CommentType, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.CommentType,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>


            <br />
            <button type="submit" class="btn btn-dark">Submit</button>
        }

    </div>
</div>