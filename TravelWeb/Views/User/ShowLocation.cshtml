@model IEnumerable<TravelWeb.Models.Location>
@{
    ViewBag.Title = "ShowLocation";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}




<div class="container">

    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];

    }
    @{
        ViewBag.UN = TempData["UN"];
    }




    <header class="py-5">
            <div class="container px-lg-5">
                <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRjhMsJ2iJVgY5FxOKODtHs9oYiERGTnH8IvQ&usqp=CAU" alt="" height="300" width="1200" />
                    
                </div>
            </div>
        </header>
  

    <section class="pt-4">
        <div class="container px-lg-5">

            <div class="row gx-lg-5">

                <tbody>
                    @foreach (var c in Model)
                    {
                        <div class="col-lg-6 col-xxl-4 mb-5">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"><img src=@Url.Content(c.LocationImage) alt="" height="100" width="100" /></div>
                                    <h2 class="fs-4 fw-bold">@Html.DisplayFor(model => c.Name)</h2>
                                    <p class="mb-0">@Html.DisplayFor(model => c.Description)</p>
                                    <p class="mb-0">
                                        <a type="button" class="btn btn-success btn-sm"
                                           href="@Url.Action("HotelLocation", new {id = c.Id})">View Hotel</a>
                                    </p>
                                </div>
                            </div>
                        </div>








                    }
                </tbody>
            </div>
        </div>
    </section>
</div>