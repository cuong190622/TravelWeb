@model IEnumerable<TravelWeb.Models.Hotel>
@{
    ViewBag.Title = "HotelLocation";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}



<div class="container">
    <h1 class="display-4">Location OverView</h1>
    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];

    }
    @{
        ViewBag.UN = TempData["UN"];
    }

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Star)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var c in Model)
            {
            <tr>
                <th scope="row">@Html.DisplayFor(model => c.Id)</th>
                <td>@Html.DisplayFor(model => c.Name)</td>
                <td>@Html.DisplayFor(model => c.Star)</td>
                <td>@Html.DisplayFor(model => c.Description)</td>

                <td>
                    <a type="button" class="btn btn-success btn-sm"
                       href="@Url.Action("CreateBooking", new {id = c.Id})">Booking Hotel</a>
                </td>

                <td>
                    <a type="button" class="btn btn-success btn-sm"
                       href="@Url.Action("ShowTypeRoom", new {id = c.Id})">View Type </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
</div>