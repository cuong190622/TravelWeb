@model TravelWeb.Models.Room
@{
    ViewBag.Title = "CreateRoom";
    Layout = "~/Views/Managerht/_LayoutManager.cshtml";
}

<h2>CreateRoom</h2>
<div class="container">
    <h1 class="display-4">New Room</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {

        <div class="form-group">
            @Html.LabelFor(m => m.TypeId, htmlAttributes: new { @class = "form-weight-bold" })
            @Html.DropDownListFor(m => m.TypeId, (IEnumerable<SelectListItem>)ViewBag.Type, htmlAttributes
           : new { @class = "form-control" }
           )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RoomNo,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.RoomNo,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>
       


        <br />

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>
