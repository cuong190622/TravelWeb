@model TravelWeb.Models.TypeRoom
@{
    ViewBag.Title = "CreateTypeRoom";
    Layout = "~/Views/Managerht/_LayoutManager.cshtml";
}

<h2>CreateTypeRoom</h2>
<div class="container">
    <h1 class="display-4">New Type Room</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {
        
        <div class="form-group">
            @Html.LabelFor(m => m.HotelId, htmlAttributes: new { @class = "form-weight-bold" })
            @Html.DropDownListFor(m => m.HotelId, (IEnumerable<SelectListItem>)ViewBag.Hotel, htmlAttributes
           : new { @class = "form-control" }
           )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Image,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Image,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MaxNumberRoom,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.MaxNumberRoom,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Price,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Description,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>
        <br />

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>
