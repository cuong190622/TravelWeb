@model TravelWeb.Models.Booking
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Managerht/_LayoutManager.cshtml";
}

<h2>Confirm</h2>

<div>


    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }
    <div class="container">


        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.TypeRoomId, htmlAttributes: new { @class = "form-weight-bold" })
                @Html.DropDownListFor(m => m.TypeRoomId, (IEnumerable<SelectListItem>)ViewBag.Booking, htmlAttributes
               : new { @class = "form-control" }
               )
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CustomerName,
                  htmlAttributes: new { @class = "font-weight-bold" })


                @Html.EditorFor(m => m.CustomerName,
                 new
                 {
                   htmlAttributes = new { @class = "form-control" }
                 })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CustomerAdress, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.CustomerAdress,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CustomerPhone, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.CustomerPhone,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })


            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.BookingFrom, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.BookingFrom,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BookingTo, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.BookingTo,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NumberOfMember, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.NumberOfMember,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.numberRoomBook, new { @class = "font-weight-bold" })
                @Html.EditorFor(m => m.numberRoomBook,
                new
                {
                  htmlAttributes = new { @class = "form-control" }
                })
            </div>
            <br />
            <button type="submit" class="btn btn-dark">Submit</button>
        }

    </div>
</div>