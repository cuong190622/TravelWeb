
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}


@model IEnumerable<TravelWeb.Models.UserInfo>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
   

    <table class="table table-hover" style="margin: 10px 0 0;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Role</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">DOB</th>
                <th scope="col">Action</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var c in Model)
            {
            <tr>
                <td>@Html.DisplayFor(model => c.Role)</td>
                <td>@Html.DisplayFor(model => c.Name)</td>
                <td>@Html.DisplayFor(model => c.Age)</td>
                <td>@Html.DisplayFor(model => c.Email)</td>
                <td>@Html.DisplayFor(model => c.Phone)</td>
                <td>@Html.DisplayFor(model => c.DoB)</td>




                <td>

                    <a type="button" class="btn btn-success btn-sm" style="margin-top: 3px; width: 55px; "
                       href="@Url.Action("EditAccount", new {id = c.Id})">Edit</a>
                    <a type="button" class="btn btn-danger btn-sm" style="margin-top: 3px; width: 55px; "
                       href="@Url.Action("DeleteUser", new {id = c.Id })">Delete</a>

                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>



