@model TravelWeb.Models.UserInfo
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>CreateUser</h2>

<div class="container">
    <h1 class="display-4">New User</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Email,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.DoB, new { htmlAttributes = new { @class = "form_title-input", @placeholder = "DoB" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Age, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Age,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Phone,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>

        <br />







        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>









