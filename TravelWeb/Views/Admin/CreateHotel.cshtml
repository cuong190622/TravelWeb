@model TravelWeb.Models.Hotel

    @{
        ViewBag.Title = "CreateHotel";
        Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    }

<div class="container">

    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {



        <div class="form-group">
            @Html.LabelFor(m => m.LocationId, htmlAttributes: new { @class = "form-weight-bold" })
            @Html.DropDownListFor(m => m.LocationId, (IEnumerable<SelectListItem>)ViewBag.Class, htmlAttributes
           : new { @class = "form-control" }
           )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Star, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Star,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.HotelImage, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.HotelImage,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Description,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>
        <br />

        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>

